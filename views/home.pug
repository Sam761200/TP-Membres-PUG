extends layouts/frontend

include includes/_mixins

block head
  //- Inject here JS and styles for this specific page

block content
  .ui.middle.aligned.center.aligned.grid
    .sixteen.wide.ten.wide.tablet.seven.wide.computer.column
      h1 Register

      if error
        .ui.red.message
          p= error

        if flash_success
          .alert.alert-success
            each message in flash_success
              p= message

      form.ui.large.form(method="post" action="/")
        .ui.segment
          +field('text', 'firstName', 'First name', firstName)
          +field('text', 'lastName', 'Last name', lastName)
          +field('email', 'email', 'your.email@address.tld', email)
          +field('password', 'password', 'Password')
          +field('password', 'password_confirm', 'Confirm password')
          button(type="submit").ui.fluid.large.teal.submit.button
